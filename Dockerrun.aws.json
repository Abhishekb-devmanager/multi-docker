{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"abhishek1984/multi-client",
            "container":"client",
            "essential": false,
            "memory": 128

        },
        {
            "name":"server",
            "image":"abhishek1984/multi-server",
            "container":"api",
            "essential": false,
            "memory": 128

        },
        {
            "name":"worker",
            "image":"abhishek1984/multi-worker",
            "container":"worker",
            "essential": false,
            "memory": 128
        },
        {
            "name":"nginx",
            "image":"abhishek1984/multi-nginx",
            "container":"nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links":["client", "server"],
            "memory": 128
        }
    ]
}